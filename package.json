{
  "name": "alive_thread",
  "version": "1.0.0",
  "description": "AliveThread is a simple Discord bot that helps keep your forum threads active so they don't get automatically closed by Discord.",
  "main": "src/index.js",
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "postinstall": "prisma generate --schema=./src/prisma/schema.prisma",
    "docker:build": "docker build -t alive_thread-bot .",
    "docker:run": "docker run -p 3000:3000 --env-file .env alive_thread-bot"
  },
  "prisma": {
    "schema": "src/prisma/schema.prisma"
  },
  "keywords": [
    "nodejs",
    "discord.js",
    "discord bot",
    "discord threads",
    "keep alive",
    "forum bot",
    "thread keeper",
    "thread alive",
    "auto bump",
    "discord forum",
    "keep thread open",
    "thread manager",
    "prisma",
    "neon db",
    "database bot",
    "alive thread",
    "discord utility",
    "community management"
  ],
  "author": {
    "name": "Safwan Sadid",
    "email": "safwansadid.ah@gmail.com",
    "url": "https://safu-portfolio.netlify.app"
  },
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.16.3",
    "discord.js": "^14.22.1",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "fs": "^0.0.1-security",
    "node-cron": "^4.2.1",
    "prisma": "^6.16.3"
  }
}

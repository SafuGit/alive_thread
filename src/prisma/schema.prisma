datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Server {
  id        String    @id @default(cuid())
  name      String?
  guildId   String    @unique
  createdAt DateTime  @default(now())
  threads   Thread[]
}

model Thread {
  id                 String    @id @default(cuid())
  threadId           String    @unique                   
  serverId           String
  server             Server    @relation(fields: [serverId], references: [id])
  name               String?
  parentId           String?                       
  locked             Boolean   @default(false)
  invitable          Boolean?                      
  archived           Boolean   @default(false)
  autoArchiveDuration Int?
  archiveTimestamp   BigInt?                        
  lastMessageId      String?
  lastPinTimestamp   BigInt?
  rateLimitPerUser   Int?                           
  messageCount       Int?                           
  memberCount        Int?                           
  totalMessageSent   Int?
  appliedTags        String[]                       
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  keepAliveThreads   KeepAliveThread[]
}

model KeepAliveThread {
  id          String   @id @default(cuid())
  threadId    String
  thread      Thread   @relation(fields: [threadId], references: [id])
  userId      String   // Discord user ID who added it to keep-alive
  userName    String?  // Optional: Discord username for reference
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([threadId, userId]) // Prevent same user from adding same thread multiple times
}

model KeepAliveCursor {
  id                      String   @id
  lastKeepAliveThreadId   String?
  updatedAt               DateTime @updatedAt
}